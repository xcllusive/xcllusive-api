{
  "containerDefinitions": [{
    "essential": true,
    "image": ${IMAGE_NAME},
    "memoryReservation": 512,
    "memory": 512,
    "name": ${APP_NAME},
    "portMappings": [{
      "containerPort": 80
    }],
    "environment": [{
        "name": "NODE_ENV",
        "value": ${NODE_ENV}
      },
      {
        "name": "PORT",
        "value": "5000"
      },
      {
        "name": "JWT_EXPIRATION_HOURS",
        "value": "8"
      },
      {
        "name": "EMAIL_PORT",
        "value": "587"
      },
      {
        "name": "EMAIL_USER",
        "value": "businessinfo@xcllusive.com.au"
      },
      {
        "name": "AWS_REGION",
        "value": "ap-southeast-2"
      }
    ],
    "secrets": [{
        "name": "JWT_SECRET",
        "valueFrom": ${JWT_SECRET}
      }
    ]
  }],
  "family": "mercury-api-nonprod"
}
